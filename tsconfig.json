{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "rootDir": "source",
    "sourceRoot": "source",
    "outDir": "distribution",
    "declaration": true,
    "sourceMap": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["source/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"],
  "compileOnSave": true
}
