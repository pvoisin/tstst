{
  "typescript.tsdk": "node_modules/typescript/lib",
  "files.exclude": {
    "**/*.d.ts": {
      "when": "$(basename).ts"
    },
    "**/*.js": {
      "when": "$(basename).ts"
    },
    "**/*.js.map": {
      "when": "$(basename).ts"
    }
  },
  "tslint.exclude": [
    "**/node_modules/**"
  ],
  "files.watcherExclude": {
    "**/distribution/**": true
  },
  "search.exclude": {
    "**/distribution": true
  }
}
